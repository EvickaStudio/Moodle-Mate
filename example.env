MOODLEMATE_MOODLE__URL=https://moodle.example.com
MOODLEMATE_MOODLE__USERNAME=your_username
MOODLEMATE_MOODLE__PASSWORD=your_password
MOODLEMATE_MOODLE__INITIAL_FETCH_COUNT=1

# Web UI Configuration
MOODLEMATE_WEB__ENABLED=false
MOODLEMATE_WEB__HOST=127.0.0.1
MOODLEMATE_WEB__PORT=9095
# Required when Web UI is enabled
MOODLEMATE_WEB__AUTH_SECRET=change-me

# Optional: enables encrypted Moodle session caching on disk
MOODLEMATE_SESSION_ENCRYPTION_KEY=change-me

# AI Configuration (Optional)
MOODLEMATE_AI__ENABLED=true
MOODLEMATE_AI__API_KEY=sk-...
MOODLEMATE_AI__MODEL=gpt-5-nano
# This might be provider specific
# MOODLEMATE_AI__TEMPERATURE=0.7 
MOODLEMATE_AI__MAX_TOKENS=150
MOODLEMATE_AI__SYSTEM_PROMPT=Summarize the message concisely with appropriate emojis, excluding links. Write in target language of the notification.
MOODLEMATE_AI__ENDPOINT=https://api.openai.com/v1/
# for openrouter change to https://openrouter.ai/api/v1/

# Notification Settings
MOODLEMATE_NOTIFICATION__MAX_RETRIES=5
MOODLEMATE_NOTIFICATION__FETCH_INTERVAL=60

# Providers
# Discord
MOODLEMATE_DISCORD__ENABLED=false
MOODLEMATE_DISCORD__WEBHOOK_URL=
MOODLEMATE_DISCORD__BOT_NAME=MoodleMate

# Pushbullet
MOODLEMATE_PUSHBULLET__ENABLED=false
MOODLEMATE_PUSHBULLET__API_KEY=

# Webhook Site
MOODLEMATE_WEBHOOK_SITE__ENABLED=false
MOODLEMATE_WEBHOOK_SITE__WEBHOOK_URL=
