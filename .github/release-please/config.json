{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "python",
  "pull-request-title-pattern": "chore(main): release ${version}",
  "pull-request-header": "## Release Summary\nThis pull request was generated by Release Please.\n\nAfter merge:\n- A new Git tag and GitHub Release will be created.\n- CHANGELOG.md and version files will be updated.\n\nPlease review the changelog entries for clarity.",
  "pull-request-footer": "## Release Checklist\n- [ ] Changelog entries are accurate.\n- [ ] Version bump is expected.\n- [ ] CI checks passed.\n- [ ] Merge to publish release.",
  "packages": {
    ".": {
      "package-name": "moodle-mate",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "extra-files": [
        "src/moodlemate/core/version.py"
      ],
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "perf",
          "section": "Performance"
        },
        {
          "type": "refactor",
          "section": "Refactoring"
        },
        {
          "type": "revert",
          "section": "Reverts"
        },
        {
          "type": "docs",
          "section": "Documentation"
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "build",
          "section": "Build System"
        },
        {
          "type": "ci",
          "section": "CI"
        },
        {
          "type": "chore",
          "section": "Chores",
          "hidden": true
        }
      ]
    }
  }
}
