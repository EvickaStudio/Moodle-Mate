{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "python",
  "packages": {
    ".": {
      "package-name": "moodle-mate",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "extra-files": [
        "src/moodlemate/core/version.py"
      ],
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "perf",
          "section": "Performance"
        },
        {
          "type": "refactor",
          "section": "Refactoring"
        },
        {
          "type": "revert",
          "section": "Reverts"
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": true
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "build",
          "section": "Build System",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "CI",
          "hidden": true
        },
        {
          "type": "chore",
          "section": "Chores",
          "hidden": true
        }
      ]
    }
  }
}
